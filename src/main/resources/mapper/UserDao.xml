<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lofts.blog.dao.IUserDao">


    <select id="login" resultType="com.lofts.blog.model.User">
        select *
        from user
        where username = #{username}
          and password = #{password}
    </select>

    <insert id="register" keyProperty="id">
        insert into user (username, password, registerdate) values (#{username}, #{password}, #{registerdate})
    </insert>

    <select id="checkUserName" resultType="java.lang.String">
        select *
        from user
        where username = #{username}
    </select>

    <update id="saveUserInfo">
        update user
        set
            headimage     = #{headimage},
            nickname      = #{nickname},
            birthday      = #{birthday},
            sex           = #{sex},
            email         = #{email},
            address       = #{address},
            hobby         = #{hobby},
            constellation = #{constellation}
        where id = #{id}
    </update>

    <select id="queryUserInfo" resultType="com.lofts.blog.model.User">
        select *
        from user
        where id = #{id}
    </select>

    <select id="getBirthdayList" resultType="java.lang.String">
        select *
        from birthday
    </select>

    <select id="getConstellationList" resultType="java.lang.String">
        select *
        from constellation
    </select>

    <select id="getHobbyList" resultType="java.lang.String">
        select *
        from hobby
    </select>

</mapper>